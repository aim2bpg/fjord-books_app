<h1><%= Report.model_name.human %></h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th><%= User.human_attribute_name(:name) %></th>
      <th><%= Report.human_attribute_name(:title) %></th>
      <th><%= Report.human_attribute_name(:body) %></th>
      <th><%= Report.human_attribute_name(:created_at) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <th>
          <% if User.find(report.user_id).avatar.attached? %>
            <%= image_tag User.find(report.user_id).avatar.variant(resize_to_fill: [30, 30]) %>
          <% end %>
        </th>
        <td>
          <% if User.find(report.user_id).name? %>
            <%= User.find(report.user_id).name %>
          <% else %>
            <%= User.find(report.user_id).email %>
          <% end %>
        </td>
        <td><%= report.title %></td>
        <td><%= report.body %></td>
        <td><%= l report.created_at %></td>
        <td><%= link_to t('views.common.show'), report %></td>
        <% if current_user == User.find(report.user_id) %>
          <td><%= link_to t('views.common.edit'), edit_report_path(report) %></td>
          <td><%= link_to t('views.common.destroy'), report, method: :delete, data: { confirm: t('views.common.delete_confirm') } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('views.common.new'), new_report_path %>
